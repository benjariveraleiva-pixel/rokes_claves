<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:rowCount="2"
    android:columnCount="2"
    android:alignmentMode="alignMargins"
    android:useDefaultMargins="true">

    <Button
        android:id="@+id/btnDepartamentos"
        android:text="Departamentos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/square_button_bg" />

    <Button
        android:id="@+id/btnUsuarios"
        android:layout_width="0dp"
        android:layout_height="23dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/square_button_bg"
        android:text="Usuarios" />

    <Button
        android:id="@+id/btnEventos"
        android:text="Historial de acceso"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/square_button_bg" />

    <Button
        android:id="@+id/btnSensores"
        android:text="Sensores"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/square_button_bg" />

    <Button
        android:id="@+id/btnEventosPendientes"
        android:text="Peticiones de acceso"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:background="@drawable/square_button_bg" />

</GridLayout>
